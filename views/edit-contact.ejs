<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Update Data</h2>
      <form method="post" action="/contact/update">
        <div class="mb-3">
          <input type="hidden" name="oldName" value="<%= contact.name %>" />
          <label for="name" class="form-text">Name</label>
          <input
            type="text"
            class="form-text text-dark"
            name="name"
            id="name"
            value="<%= contact.name %>"
          />
        </div>
        <div class="mb-3">
          <label for="name" class="form-text">Email</label>
          <input
            type="email"
            class="form-text text-dark"
            name="email"
            id="email"
            required
            value="<%= contact.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="name" class="form-text">Phone</label>
          <input
            type="text"
            class="form-text text-dark"
            name="phone"
            id="phone"
            value="<%= contact.phone %>"
          />
        </div>
        <button class="btn btn-primary" type="submit">Update Data</button>
      </form>
    </div>
  </div>
</div>
