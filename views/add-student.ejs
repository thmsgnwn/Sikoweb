<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Add Contact</h2>
      <form method="post" action="/student">
        <div class="mb-3">
          <label for="nis" class="form-label">Nis</label>
          <input type="text" class="form-text" name="nis" id="nis" />
        </div>
        <div class="mb-3">
          <label for="fullName" class="form-label">Name</label>
          <input type="text" class="form-text" name="fullName" id="fullName" />
        </div>
        <div class="mb-3">
          <label for="grade" class="form-label">grade</label>
          <input type="text" class="form-text" name="grade" id="grade" />
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Email</label>
          <input
            type="email"
            class="form-text"
            name="email"
            id="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Phone</label>
          <input type="text" class="form-text" name="phone" id="phone" />
        </div>
        <div class="mb-3">
          <label for="address" class="form-label">Address</label>
          <input type="text" class="form-text" name="address" id="address" />
        </div>
        <button class="btn btn-primary" type="submit">Save Data</button>
      </form>
    </div>
  </div>
</div>
