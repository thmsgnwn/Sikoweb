<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2 class="fw-bold">Detail Contact</h2>
      <% if (contact === undefined) { %>
      <p class="alert alert-danger fw-bold" role="alert">
        404 Contact Not Found <br /><a
          href="/contact"
          class="alert-link fw-light"
          >&laquo; back to contact</a
        >
      </p>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.phone %></h6>
          <p class="card-text"><%= contact.email %></p>

          <a
            href="/contact/edit/<%= contact.name %>"
            class="btn btn-warning badge fw-bold text-dark"
            >update</a
          >
          <a
            href="/contact/delete/<%= contact.name %>"
            class="btn btn-danger badge fw-normal"
            onclick="return confirm('Are you sure to remove this data?');"
            >remove</a
          >
          <a href="/contact" class="card-link d-block mt-3"
            >&laquo; Back to List contacts</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
